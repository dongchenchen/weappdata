.wxcp-wording {
    font-family: 'PingFangSC-Regular', 'Microsoft Yahei';
    font-size: 30rpx;
    color: #888888;

    line-height: 400rpx;
    vertical-align: middle;

    width: 100%;
    text-align: center;
}

.wxcp-barchart-legend {
    margin-left: 12rpx;
    margin-top: 5rpx;
    line-height: 36rpx;
}
.wxcp-barchart-legend-item{
    display: inline-block;
    padding: 20rpx 38rpx 5rpx 10rpx;
    line-height: 36rpx;
}

.wxcp-barchart-legend-icon{
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    border-radius: 30rpx;
    background-color: #c1c0c3;
    border-color: #c1c0c3;
    margin-right: 8rpx;
}

.wxcp-barchart-legend-text {
    color: #B8B8B8;
    font-family: 'PingFangSC-Light', 'PingFangSC-Regular', '.HelveticaNeueDeskInterface-MediumP4', 'Microsoft Yahei';
    font-size: 26 rpx;
    display: inline-block;
    line-height: 36 rpx;
    vertical-align: middle;
}
